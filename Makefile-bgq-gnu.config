# PNMPI
#PNMPI_DIR               =    /g/g90/sato5/opt.bak/opt-vulcan/
PNMPI_DIR               =    /g/g90/sato5/opt/opt-bgq/
PNMPI_INC_PATH		=    $(PNMPI_DIR)/include/
PNMPI_BIN_PATH  	=    $(PNMPI_DIR)/bin
PNMPI_MOD_LIB_PATH 	=    $(PNMPI_DIR)/lib/pnmpi-modules
PNMPI_LIB_PATH 	        =    $(PNMPI_DIR)/lib

# MPI C++ compiler
CXX 		=  /usr/local/tools/compilers/ibm/mpicxx-fastmpi-mpich-312  -fPIC -rdynamic
MPIXX		= $(CXX)
CC		= $(CXX)
MPICC		= $(CXX)
		

# Passed to compiler
OPT_LEVEL	= -O2
DEBUG_LEVEL	= -g -std=c++0x -pthread
#DEBUG_LEVEL	= -g -pthread 
EXTRA_CCFLAGS	= -Wall
CXXFLAGS	= $(OPT_LEVEL) $(DEBUG_LEVEL) $(EXTRA_CCFLAGS) 
CCFLAGS		= $(CXXFLAGS) 

# Passed to the C pre-processor
CPPFLAGS        = -I./ -I../src
CFLAGS		= $(CPPFLAGS)

# Passed to the linker
LDFLAGS         = -L./ -lstdc++  -lintlc

# Link with these libraries
LDLIBS          =

# Installation path
prefix		= ./lib

